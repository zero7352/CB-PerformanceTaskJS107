# List of dictionaries containing questions, multiple-choice options, and the correct key
quiz_questions = [
    {
        "question": "What planet is known as the Red Planet?",
        "options": ["A. Earth", "B. Mars", "C. Jupiter", "D. Venus"],
        "answer": "B"
    },
    {
        "question": "What gas do plants absorb from the atmosphere?",
        "options": ["A. Oxygen", "B. Nitrogen", "C. Carbon Dioxide", "D. Hydrogen"],
        "answer": "C"
    },
    {
        "question": "What is the chemical symbol for water?",
        "options": ["A. H2O", "B. CO2", "C. O2", "D. NaCl"],
        "answer": "A"
    }
]

def run_quiz(questions):
    """Iterates through questions, handles user input, and calculates the score."""
    score = 0

    for q in questions:
        # Display the question and its options
        print("\n" + q["question"])
        for option in q["options"]:
            print(option)

        # Get user input and convert to uppercase to match the answer key
        user_answer = input("Enter your answer (A, B, C, or D): ").upper()

        # Check if the user's answer matches the stored 'answer' key
        if user_answer == q["answer"]:
            print("Correct!")
            score += 1
        else:
            print(f"Incorrect. The correct answer was {q['answer']}.")

    return score

def main():
    """Main entry point for the application."""
    print("Welcome to the Science Quiz App!")
    print("Answer the following questions:")

    # Run the quiz logic and store the returned score
    final_score = run_quiz(quiz_questions)

    # Display final results and feedback based on performance
    print("\nQuiz Complete!")
    print(f"Your final score: {final_score}/{len(quiz_questions)}")

    if final_score == len(quiz_questions):
        print("Outstanding performance!")
    elif final_score >= 2:
        print("Good job!")
    else:
        print("Keep studying and try again!")

# Ensures the script runs only when executed directly (not when imported)
if __name__ == "__main__":
    main()
